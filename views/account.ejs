<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><%= siteName %></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <% if(user) { %>
                <li><a href="/domains"><%= __('MY_DOMAINS') %></a></li>
                <li><a href="/status"><%= __('SERVER_STATUS') %></a></li>
                <% } %>
                <li><a href="/help"><%= __('HELP') %></a></li>
                <li><a href="/about"><%= __('ABOUT') %></a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if(!user) { %>
                <li><a href="/login"><%= __('LOGIN') %></a></li>
                <% if(allowReg) { %>
                <li><a href="/reg"><%= __('REGISTER') %></a></li>
                <% }} else { %>
                <li><p class="navbar-text"><%= __('WELCOME') %>,
                <li class="dropdown active">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= user.name %><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/domains"><%= __('MY_DOMAINS') %></a></li>
                        <li><a href="/account"><%= __('MY_ACCOUNT') %></a></li>
                        <li><a href="/myapi"><%= __('MY_API') %></a></li>
                        <li><a href="/contact"><%= __('FEEDBACK') %></a></li>
                    </ul>
                </li>
                <li>
                    <form class="navbar-form" action="/logout" method="post">
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger"><%= __('LOGOUT') %></button>
                        </div>

                    </form>
                </li>
                <% } %>
            </ul>

        </div><!--/.nav-collapse -->
    </div>
</div>

<div class="container">

    <div id="notification">
        <% if (locals.success) { %>
        <div class="alert alert-success alert-dismissable fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= success %>
        </div>
        <% } %>
        <% if (locals.error) { %>
        <div class="alert alert-danger alert-dismissable fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= error %>
        </div>
        <% } %>
    </div>


    <div class="container" style="min-height: 500px;">
        <div id="user">
            <h2 style="display: inline-block; margin-left: 20px;">
                <%= __('USER') %>:&nbsp;
                <a href="/account"><%= user.name %></a>
            </h2>
            <div>
                <form method="post" id="user-form" class="form-horizontal" role="form">
                    <fieldset>
                        <div class="form-group">
                            <div style="padding: 10px 30px;">
                                <%= __('USER_HELP_INFO') %>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label"><%= __('USERNAME') %></label>
                            <div class="col-lg-7">
                                <p class="form-control-static"><%= user.name %></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-lg-3 control-label"><%= __('EMAIL') %></label>
                            <div class="col-lg-7">
                                <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="password"><%= __('CURRENT_PASSWORD') %></label>
                            <div class="col-lg-7">
                                <input type="password" class="form-control" id="password" name="password">
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="newpass"><%= __('NEW_PASSWORD') %></label>
                            <div class="col-lg-7">
                                <input type="password" class="form-control" id="newpass" name="newpass">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="password-repeat"><%= __('REPEAT_PASSWORD') %></label>
                            <div class="col-lg-7">
                                <input type="password" class="form-control" id="password-repeat" name="password-repeat">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-10">
                                <button type="submit" class="btn btn-primary"><%= __('SAVE') %></button>
                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>



</div><!-- /.container -->
<%-include footer%>
